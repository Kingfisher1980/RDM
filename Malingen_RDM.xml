	<init>
		<addtochat color="8">Starting up Red Mage</addtochat>
		<command delay="1000">/macro book 4</command>
		<command delay="2000">/macro set 1</command>
		<command delay="3000">/lockstyleset 021</command> <!-- 200 -->
		<command delay="4000">/exec MaliBRD/RDMEXEC</command>
	</init>

	<jobability>
		<if ad_name="Chainspell"><equip><body>Vitivation Tabard</body></equip></if>
		<if ad_name="Saboteur"><registerbuff id="454" /></if>
		<if ad_name="Composure"><registerbuff id="419" /></if>
	</jobability>

	<idlegear>
		<if eq_rring="Trizek Ring"><equip lock="true"><rring>Trizek Ring</rring></equip></if>
		<if eq_rring="Capacity Ring"><equip lock="true"><rring>Capacity Ring</rring></equip></if>
		<if eq_rring="Vocation Ring"><equip lock="true"><rring>Vocation Ring</rring></equip></if>
		<if eq_rring="Facility Ring"><equip lock="true"><rring>Facility Ring</rring></equip></if>
		<if eq_rring="Dim. Ring (Dem)"><equip lock="true"><rring>Dim. Ring (Dem)</rring></equip></if>
		<if eq_rring="Dim. Ring (Holla)"><equip lock="true"><rring>Dim. Ring (Holla)</rring></equip></if>
		<if eq_rring="Dim. Ring (Mea)"><equip lock="true"><rring>Dim. Ring (Mea)</rring></equip></if>
		<if eq_back="Aptitude Mantle"><equip lock="true"><back>Aptitude Mantle</back></equip></if>    
		<if eq_rring="Warp Ring"><equip lock="true"><rring>Warp Ring</rring></equip></if>
		<if eq_rring="Echad Ring"><equip lock="true"><rring>Echad Ring</rring></equip></if>
		<if eq_back="Nexus Cape"><equip lock="true"><back>Nexus Cape</back></equip></if>
		
		<if p_status="engaged">
			<equip set="TP"/>
		</if>
		<else>
			<if p_subjob="whm|blm|sch">
				<equip set="Idle"/>
					<if p_mpp="&lt;65">
						<equip set="RefreshIdle"/>
					</if>
					<if p_ismoving="True">
						<equip set="Movement"/>
							<if e_area="*Adoulin">
							<equip set="Adoulin"/>
							</if>
					</if>
			</if>
			<if p_subjob="nin|dnc|war">
				<equip set="Idle"/>
					<if p_mpp="&lt;65">
						<equip set="RefreshIdle"/>
					</if>
					<if p_ismoving="True">
						<equip set="Movement"/>
							<if e_area="*Adoulin">
							<equip set="Adoulin"/>
							</if>
					</if>
			</if>
		</else>
	</idlegear>

	<premagic>
		<if ad_skill="enhancingmagic">
			<equip set="ENHFC"/>
			<if ad_name="Stoneskin">
				<equip set="SSFC"/>
			</if>
		</if>
		<elseif ad_skill="enfeeblingmagic">
			<equip set="ENFFC"/>
		</elseif>
		<elseif ad_name="Cure*">
			<equip set="CFC"/>
		</elseif>
		<elseif ad_name="Curaga*">
			<equip set="CFC"/>
		</elseif>
		<else>
			<equip set="FC"/>
		</else>
	</premagic>


	<midmagic>
		<if ad_name="Stun">
			<equip set="Stun" />
		</if>
		<elseif ad_name="Stoneskin">
			<equip set="Stoneskin" />
		</elseif>
		<elseif ad_name="Cure*|Curaga*">
			<equip set="Cure" />
			<if mode="OR" e_weatherelement="Light" e_dayelement="Light">
				<equip>
					<back>Twilight Cape</back>
					<waist>Korin Obi</waist>
				</equip>
			</if>
		</elseif>
		<elseif ad_skill="Ninjutsu"><equip set="Haste" /></elseif>
		<elseif ad_skill="DarkMagic"><equip set="Dark" /></elseif>
		<elseif ad_skill="ElementalMagic">
			<if ad_name="Burn|Choke|Shock|Rasp|Drown|Choke">
				<equip set="EleDot" />
			</if>
			<elseif ad_name="Impact">
				<equip set="Impact" />
			</elseif>
			<else>
				<equip when="$GearTime" set="Nuke" />
				<if advanced="%ad_element=%e_dayelement">
					<if ad_element="Light"><equip><waist>Korin Obi</waist></equip></if>
					<equip>
						<!--<rring>Zodiac Ring</rring>-->
						<back>Twilight Cape</back>
					</equip>
				</if>
				<elseif advanced="%ad_element=%e_weatherelement">
					<if ad_element="Light">
						<equip when="midcast">
							<waist>Korin Obi</waist>
						</equip>
					</if>
					<equip>
						<back>Twilight Cape</back>
					</equip>
				</elseif>
			</else>
		</elseif>
		
		<elseif ad_skill="EnfeeblingMagic">
			<if ad_name="Slow*|Paralyze*">
				<equip set="Enfeeb-MND" />
				<if ad_name="Slow II"><equip><head>Viti. Chapeau +1</head></equip></if>
				<elseif ad_name="Paralyze II"><equip><feet>Vitivation Boots +1</feet></equip></elseif>
			</if>
			<else><equip set="Enfeeb-ACC" /></else>
			<if ad_name="Dia III"><equip><head>Viti. Chapeau +1</head></equip></if>
			<if buffactive="454"><equip><hands>Estq. Ganthrt. +2</hands></equip></if>
		</elseif>
		
		<elseif ad_skill="EnhancingMagic">
			<if ad_name="Embrava|En*|Bar*|Phalanx"><equip set="Enhancing" /></if>
			<else><equip set="Haste" /></else>
			<if ad_name="Refresh|Refresh II"><equip><legs>Estqr. Fuseau +2</legs></equip></if>
			<if buffactive="419" advanced="%p_name!=%at_name">
				<equip>
					<head>Estq. Chappel +2</head>
					<body>Estq. Sayon +2</body>
					<legs>Estqr. Fuseau +2</legs>
				</equip>
			</if>
		</elseif>
	</midmagic>
</ashitacast>